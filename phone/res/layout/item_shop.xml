<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_item_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="13dip"
        android:background="@drawable/building_border"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="190dip" >

            <ImageView
                android:id="@+id/id_item_buildings_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:scaleType="fitXY"
                android:src="@drawable/goods_demo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_gravity="top"
                
                android:background="@color/transparent_new_1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_item_shop_name"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tran00white"
                    android:ellipsize="middle"
                    android:gravity="center|left"
                    android:paddingLeft="10dip"
                    android:shadowColor="#000000"
                    android:shadowDx="4"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:hint="商品名称"
                    android:singleLine="true"
                    android:textColor="#fefefe"
                    android:textSize="16sp" />

                <TextView
                    
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tran00white"
                    android:ellipsize="middle"
                    android:hint="描述"
                    android:singleLine="true"
                    android:textColor="#fefefe"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_gravity="bottom"
                
                android:background="@color/tran00bule"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_item_text_bottom_shangjin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:ellipsize="middle"
                    android:gravity="center|left"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:text="商品价格 : "
                    android:shadowColor="#000000"
                    android:shadowDx="4"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_item_shop_jiage"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:shadowColor="#000000"
                    android:shadowDx="4"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="35"
                    android:textColor="#fcff00"
                    android:gravity="center"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:shadowColor="#000000"
                    android:shadowDx="4"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text=" 元/件 "
                    android:textColor="#fefefe"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_margin="1dip" >

            <TextView
                android:id="@+id/id_item_shop_buy"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fefefe"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="+ 购买"
                android:textColor="#ff6633"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:background="#dcdcdc" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:focusableInTouchMode="false" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:focusableInTouchMode="false" >

                    <TextView
                        android:id="@+id/id_item_text_yibaobei"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fefefe"
                        android:ellipsize="middle"
                        android:gravity="center"
                        android:text="110"
                        android:paddingLeft="35dip"
                        android:singleLine="true"
                        android:textColor="#160f0f"
                        android:textSize="16sp"
                        android:focusableInTouchMode="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignBaseline="@id/id_item_text_yibaobei"
                        android:background="#fefefe"
                        android:ellipsize="middle"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="  件"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="#fefefe"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="数量"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:background="#dcdcdc" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:focusableInTouchMode="false" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:focusableInTouchMode="false" >

                    <TextView
                        android:id="@+id/id_item_shop_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fefefe"
                        android:ellipsize="middle"
                        android:gravity="center"
                        android:text="0001"
                        android:paddingLeft="35dip"
                        android:singleLine="true"
                        android:textColor="#160f0f"
                        android:textSize="16sp"
                        android:focusableInTouchMode="false" />

                    
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="#fefefe"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="商品代号"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:focusableInTouchMode="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>